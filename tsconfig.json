{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@api/*": ["src/api/*"],
            "@worker/*": ["src/worker/*"],
            "@common/*": ["src/common/*", "common/*"],
            "@config/*": ["src/config/*"],
            "*": ["node_modules/*"]
        },
        "typeRoots": ["./@types", "./node_modules/@types"],
        "types": ["node", "express", "joi", "zod"]
    },
    "include": ["src", "@types"],
    "exclude": ["node_modules", "src/locales/**/*"]
}
