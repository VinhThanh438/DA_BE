model PermissionGroups {
  id   Int     @id @default(autoincrement())
  name String
  type String? // 

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  is_default Boolean @default(false)

  permission_detail PermissionDetails[]
  users             Users[]

  @@map("permission_groups")
}

model Permissions {
  id   Int     @id @default(autoincrement())
  name String
  type String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  is_default Boolean @default(false)

  permission_detail PermissionDetails[]

  @@map("permissions")
}

model PermissionDetails {
  permission_group_id Int
  permission_id       Int

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  permission_group PermissionGroups @relation(fields: [permission_group_id], references: [id], onDelete: Cascade)
  permission       Permissions      @relation(fields: [permission_id], references: [id], onDelete: Cascade)

  @@id([permission_group_id, permission_id])
  @@map("permission_details")
}
