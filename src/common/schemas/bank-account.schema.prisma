model BankAccounts {
  id             Int     @id @default(autoincrement())
  employee_id    Int?
  partner_id     Int?
  bank           String
  responsibility String? @unique
  account_number String? @unique
  name           String?
  branch         String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  employee          Employees?          @relation(fields: [employee_id], references: [id], onDelete: Cascade)
  partner           Partners?           @relation(fields: [partner_id], references: [id], onDelete: Cascade)
  Invoice           Invoices[]
  TransactionOrders TransactionOrders[]

  @@map("bank_accounts")
}

