model FinanceRecords {
  id                 Int      @id @default(autoincrement())
  code               String   @default(cuid())
  time_at            DateTime @default(now())
  description        String?
  payment_method     String?
  amount             Decimal?
  address            String?
  attached_documents Json?    @default("[]")

  partner_id      Int?
  employee_id     Int? // nhan vien thanh toan
  organization_id Int?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  partner           Partners?           @relation(fields: [partner_id], references: [id], onDelete: Cascade)
  employee          Employees?          @relation(fields: [employee_id], references: [id], onDelete: Cascade)
  organization      Organizations?      @relation(fields: [organization_id], references: [id], onDelete: Cascade)
  TransactionOrders TransactionOrders[]

  @@map("order_expenses")
}
